@model ProductRegistrationViewModel

<section class="product-register-form">
    <div class="d-flex justify-content-center">
        <div class="col-6">

            <form method="post" enctype="multipart/form-data" novalidate asp-action="Register">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <small><span asp-validation-for="ProductName" class="text-danger"></span></small>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductDescription"></label>
                    <input asp-for="ProductDescription" class="form-control" />
                    <small><span asp-validation-for="ProductDescription" class="text-danger"></span></small>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductPrice"></label>
                    <input asp-for="ProductPrice" class="form-control" />
                    <small><span asp-validation-for="ProductPrice" class="text-danger"></span></small>
                </div>

                <div class="mb-3">
                    <label asp-for="SelectedCategoryId"></label>
                    <select asp-for="SelectedCategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "CategoryName"))">
                        <option value="">-- Select Category --</option>
                    </select>
                    <small><span asp-validation-for="SelectedCategoryId" class="text-danger"></span></small>
                </div>


                <div class="mb-3 form-group">
                    <label asp-for="ProductImage"></label>
                    <input type="file" asp-for="ProductImage" class="form-control-file">
                    <small><span asp-validation-for="ProductImage" class="text-danger"></span></small>
                </div>

                <div class="grid mt-2">
                    <button type="submit" class="btn btn-success">CREATE</button>
                </div>

            </form>
        </div>
    </div>
</section>
