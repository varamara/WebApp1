@model ProductRegistrationViewModel

@{

    var products = await productService.GetProductsAsync();
}

@{
    ViewData["Title"] = "Products";
}

@if (products != null)
{
    <section class="products">
        <div class="container">
            <nav class="header">
                <div class="products-title">
                    Products
                </div>
                <a asp-controller="Products" asp-action="Register" class="button"><i class="fa-solid fa-plus"></i>Create new product</a>
            </nav>
            <div class="products-grid">

                <!-- category-item start -->
                <div class="grid-categories">
                    <div class="category">Product Title</div>
                    <div class="category">Description</div>
                    <div class="category">Price</div>
                    <div class="category">Category</div>
                </div>
                <!-- category-item end -->

                <!-- collection-item start -->
                @foreach (var product in products)
                {
                    <div class="grid-item">
                        <a class= "title "asp-action="Details" asp-route-id="@product.Id">@product.ProductName</a>
                        <div class="description-container">
                            <div class="description">@product.ProductDescription</div>
                        </div>
                        <div class="price">@product.ProductPrice</div>
                        <div class="category">@product.ProductCategory.CategoryName</div>
                    </div>
                }
                <!-- collection-item end -->

            </div>
        </div>
    </section>
}